pipeline {
    agent any

    stages {
        stage('Setup') {
            steps {
                script {
                    // Ensure Python and pip are available
                    sh 'python3 -m ensurepip --default-pip'
                    sh 'python3 -m pip install pyinstaller'
                }
            }
        }

        stage('Build Executable') {
            steps {
                script {
                    // Package calc.py as an executable
                    sh 'python3 -m PyInstaller --onefile -w calc.py'
                }
            }
        }

        stage('Archive Artifact') {
            steps {
                archiveArtifacts artifacts: 'dist/calc.exe', fingerprint: true
            }
        }
    }
}
